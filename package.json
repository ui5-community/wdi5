{
  "name": "wdio-ui5",
  "version": "0.0.5",
  "description": "package to enhance appium driven wdio test for cordova wrapped ui5 applications",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:js-soft/wdio-ui5.git"
  },
  "scripts": {
    "_startApp": "http-server ./test/ui5-app --p 8888 --proxy https://services.odata.org",
    "_test": "wdio ./test/wdio.conf.js",
    "test": "run-p _startApp _test"
  },
  "screenshotPath": "./test/report/screenshots",
  "publishConfig": {
    "registry": ""
  },
  "keywords": [
    "cordova",
    "ui5",
    "wdio",
    "webdriver",
    "appium"
  ],
  "author": "js-soft <dominik.feininger@js-soft.com> (https://www.js-soft.com/)",
  "license": "ISC",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix"
    ],
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "git-cz": "^4.3.1",
    "http-server": "^0.12.1",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@wdio/cli": "^5.22.4",
    "@wdio/local-runner": "^5.22.4",
    "@wdio/mocha-framework": "5.18.7",
    "@wdio/selenium-standalone-service": "^5.16.10",
    "@wdio/spec-reporter": "^5.22.4",
    "@wdio/sync": "^5.20.1",
    "chromedriver": "^80.0.2",
    "selenium-webdriver": "^3.6.0",
    "wdio-chromedriver-service": "^5.0.2",
    "webdriverio": "^5.19.0"
  }
}
